
<div class="categories__slider owl-carousel">
    @foreach (var item in ViewBag.categories)
    {
        <div class="col-lg-3">
            <div class="categories__item set-bg">
                <img src="~/img/categories/cat-1.jpg" >
                <h5><a href="#">@item.Name</a></h5>
            </div>
        </div>
    }
</div>